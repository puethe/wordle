{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "Wordle API",
    "description": "API for a re-implementation of the Wordle game in NodeJS"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "paths": {
    "/play": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "guess",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/change-answer": {
      "post": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newAnswer": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}